<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="Portafolio" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		
		<class>logica.clases.Usuario</class>
		<class>logica.clases.Espectador</class>
		<class>logica.clases.Administrador</class>
		<class>logica.clases.Receta</class>
		<class>logica.clases.Notificacion</class>

		<properties>
			<!--property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/--><!-- update || create -->
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
			<property name="hibernate.hbmddl2.auto" value="update"/>  <!-- create -->
			<property name="hibernate.connection.username" value="postgres"/>
			<property name="hibernate.connection.password" value="lapass"/>
			<property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/recetasCompartidas"/>
			<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
		</properties>
	</persistence-unit>
</persistence>
